rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // User auth
    function isSignedIn() {
      return request.auth != null;
    }

    // Listing images inside tradespaces
    // Path: tradespaces/{tradespaceId}/listings/{userId}/...
    match /tradespaces/{tradespaceId}/listings/{userId}/{allPaths=**} {
      allow read: if isSignedIn();

      allow write: if isSignedIn()
        && request.auth.uid == userId
        && request.resource.size < 10 * 1024 * 1024 // limit 10MB
        && request.resource.contentType.matches('image/.*');
    }
    
    // Avatars specific rule
    match /avatars/{userId}/{allPaths=**} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    match /{folder}/{userId}/{allPaths=**} {
      allow read: if isSignedIn();

      allow write: if isSignedIn()
        && request.auth.uid == userId
        && request.resource.size < 10 * 1024 * 1024 // limit 10MB
        && request.resource.contentType.matches('image/.*');
    }

    // default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
